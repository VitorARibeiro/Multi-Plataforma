<Window x:Class="FilePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilePicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Button x:Name="Button" Width="100" Height="50" Content="File" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"/>
        <TextBlock Grid.Row="1" x:Name="TxtInfo" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
